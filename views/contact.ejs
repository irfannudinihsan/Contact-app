<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>

      <a href="/contact/add" class="btn btn-primary mt-4 mb-1">Tambah Data Contact</a>

      <% if (msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
          <%= msg  %> 
        </div>
       
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>

          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">data kosong</div>
            </td>
          </tr>

          <% } %>

          <!-- foreach ambil data -->
          <% contacts.forEach((contact,no) => { no++ %>
          <tr>
            <td><%= no++ %></td>
            <td><%= contact.nama %></td>
            <td><%= contact.nomor %></td>
            <td><%= contact.email %></td>
            <td>
              <a
                href="contact/<%= contact.nama %>"
                class="btn btn-success badge"
                >detail</a
              >
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
